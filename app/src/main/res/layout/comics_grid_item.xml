<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardComic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim5dp"
    app:cardCornerRadius="@dimen/dim0dp"
    tools:showIn="@layout/fragment_comics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBlack"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ivImageItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim160dp"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvIssuenumberItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:paddingVertical="@dimen/dim10dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim18sp"
            android:textStyle="bold"
            tools:text="#90" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>